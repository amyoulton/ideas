<div class='shadow-sm p-3 mb-5 bg-white rounded overflow-wrap'>
  <h1>
    <span class='badge badge-pill badge-info'>
      <%= @idea.id %>
    </span>
    <%= @idea.title %>
  </h1>
  <p class='shadow-none p-3 mb-5 bg-light rounded'><%= @idea.description %></p>
 
  <p class='text-muted'><%= @idea.user.first_name %> <%= @idea.user.last_name %></p>
  <%# link_to arguments: name, path, options_object %>
  <small>Liked by: <%= @idea.likes.count %></small>
  <small>
    <% if @like.present? %>
      <%= link_to(
          "Unlike",
          like_path(@like),
          method: :delete
        )
      %>
    <% else %>
      <%= link_to(
          "Like",
          idea_likes_path(@idea),
          method: :post
        )
      %>
    <% end %>
  </small>
  <% if can? :crud, @idea %>
  <div>
    <%= link_to(
      "Edit",
      edit_idea_path(@idea),
      class: 'btn btn-info'
    )
    %>
    <%= link_to(
      "Delete",
      idea_path(@idea),
      method: :delete,
      class: 'btn btn-danger',
      data: { confirm: 'are you sure?' }
    )
    %>
  </div>
  <% end %>
</div>

<%= form_with(model: [@idea, @review], local: true) do |f| %>
  <% if @review.errors.full_messages.each do |msg| %>
    <ul>
      <li class="text-danger"><%= msg %></li>
    </ul>
    <% end %>
  <% end %>
   <div class="form-group">
  <h3>Please let us know what you think:</h3>
    <%= f.number_field(
      :rating,
      rows: 1,
      placeholder: "1-5",
      class: "form-control"
    ) %>
  </div>
  <div class="form-group">
    <%= f.text_area(
      :body,
      cols: 50,
      rows: 5,
      placeholder: "What are you thoughts?",
      class: "form-control"
    ) %>
  </div>
  <%= f.submit "Review", class: "btn-primary" %>
<% end %>

<ul class="list-group answer-list">
  <% @reviews.each do |review| %>
    <li class="list-group-item">
      <p>
        <%= review.body %><br />
        <% if can? :crud, review %>
        <small>
          <%= link_to(
            "Delete",
            idea_review_path(@idea, review),
            method: :delete, 
            data: {
              confirm: "Are you sure?"
            },
            class: 'btn btn-danger btn-sm',
          ) %>
        </small>
        |
        <% end %>
        <small>
          Reviewed <%= time_ago_in_words(review.created_at) %> By <%= review.user.first_name %> <%= review.user.last_name %>
        </small>
      </p>
    </li>
  <% end %>
</ul>